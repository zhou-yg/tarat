<%- viewCode %>
import { setHookAdaptor, setModelConfig } from 'tarat-core'
import * as _runtimeReact from 'react'
import * as _runtimeReactDOM from 'react-dom/client'

setHookAdaptor(_runtimeReact, 'react')

render(<%- exportDefaultName %>)

const hostConfig = `/${window.taratConfig?.apiPre || '_hook'}`
const diffPath = `/${window.taratConfig?.diffPath || '_diff'}`

setModelConfig({
  async find(e, w) {
    return []
  },
  async update(e, w) {
    return []
  },
  async remove(e, d) {
    return []
  },
  async create(e, d) {
    return {}
  },
  async executeDiff(d) {},
  async postDiffToServer(entity, diff) {
    await fetch(`${diffPath}`, {
      method: 'POST',
      body: JSON.stringify({
        entity,
        diff
      })
    })
  },
  async postComputeToServer(c) {

    const newContext = await fetch(`${hostConfig}/${c.name}`, {
      method: 'POST',
      body: JSON.stringify(c)
    }).then(r => r.json())

    return newContext
  },
  async postQueryToServer(c) {
    console.log('postQueryToServer: ');
    const newContext = await fetch(`${hostConfig}/${c.name}`, {
      method: 'POST',
      body: JSON.stringify(c)
    }).then(r => r.json())

    return newContext
  }
})


function render (f) {

  const ele = _runtimeReact.createElement(f)

  const app = _runtimeReactDOM.createRoot(document.getElementById('<%= mountedAppId %>'))
  app.render(ele)
}

